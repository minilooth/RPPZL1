<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sample.models.Disability" table="disability" schema="bank">
        <id name="disabilityId">
            <column name="DisabilityId" sql-type="int"/>
        </id>
        <property name="disabilityName">
            <column name="DisabilityName" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>